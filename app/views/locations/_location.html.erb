<fieldset>
  <legend><%= location.name %></legend>
</fieldset>

  <% if has_empty_fields?(location) %>
    <p>This location has incomplete data! Select Edit to fix.</p>
  <% end %>

    <p><%= location.street_address %></p>
    <p><%= location.city %>, <%= location.state %>, <%= location.zip_code %></p>
    <p><%= link_to "Edit", edit_location_path(location) %> | <%= link_to "Delete", location_path(location), method: :delete, data: { confirm: "Are you sure you want to delete this appointment?" } %></p>
    <br />
